    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "interactive",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "data-bin/test",
                "--path", "checkpoints/koen_transformer_1006/checkpoint_best.pt",
                "--beam", "5", "--bpe", "sentencepiece", 
                "--sentencepiece-model", "data/sp/subword_tokenizer_ko.model", "--sacrebleu",
                "--replace-unk", "align_dict.txt", "--print-alignment", "hard"
            ]
        },
        {
            "name": "fairseq test",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "data-bin/ai_hub_sp.ko-en",
                "--path",
                "checkpoints/koen_sp/checkpoint_best.pt",
                "--batch-size",
                "1024",
                "--beam",
                "5",
                "--remove-bpe",
                "--bpe sentencepiece",
                "--sentencepiece-model",
                "data/sp/subword_tokenizer_en.model"
            ]
        }
    ]
}